<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <TextView 
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="Consulta Reserva"
     android:textSize="60px"
     android:layout_gravity="top|center_horizontal"
    />
  <LinearLayout
   android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
     android:id="@+id/txtNroTicket"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:hint="Nro de Ticket" 
   android:layout_gravity="top|left"
    />
    <Button
       android:id="@+id/btnConsultarReserva"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Consultar" 
       android:layout_gravity="top|right"
    />
  </LinearLayout>
  <LinearLayout
 android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

    <EditText
         android:id="@+id/txtPelicula"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Nombre pelicula" 
       android:layout_gravity="center"
    />
    <EditText
        android:id="@+id/txtLocal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Local" 
      android:layout_gravity="center"
    />
    <EditText
       android:id="@+id/txtSala"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:hint="Sala" 
     android:layout_gravity="center"
    />
    <EditText
       android:id="@+id/txtInicio"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:hint="Inicio" 
     android:layout_gravity="center"
    />
    <EditText
       android:id="@+id/txtFin"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:hint="Fin" 
     android:layout_gravity="center"
    />
  </LinearLayout>


  <EditText
       android:id="@+id/txtDniCliente"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:hint="Dni Cliente"
     android:textSize="10px"
     android:layout_gravity="center"
    />
  <EditText
       android:id="@+id/txtNombreCliente"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:hint="Nombre Cliente" 
     android:layout_gravity="center"
    />
</LinearLayout>
